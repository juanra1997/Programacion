package Ejercicio2;

public class Metodos {

	static int tamanno;
	static String[] array=new String[tamanno];
	static int cont=0;
	public static void Tamanno(int tamannno) {
		tamanno=tamannno;
	}
	public static void IncluirCadena(String cadena) {
		if(cont>array.length) {
			System.out.println("La cadena no coje");
		} else {
		array[cont]=cadena;
		cont++;
		}
	}
	
	public static void MostrarArray() {
		for(int i=0; i<array.length; i++) {
			System.out.println(array[i]);
		}
	}

}
